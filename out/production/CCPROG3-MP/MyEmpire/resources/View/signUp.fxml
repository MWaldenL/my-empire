<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="MyEmpire.Controller.SignUpController"
            styleClass="background">
    <VBox alignment="center"
          AnchorPane.topAnchor="0"
          AnchorPane.bottomAnchor="0"
          AnchorPane.leftAnchor="500"
          AnchorPane.rightAnchor="500">
        <Label styleClass= "instruction"
               text="Input player names" />
        <TextField text="player1"
                   fx:id="tf1"/>
        <TextField text="player2"
                   fx:id="tf2"/>
        <TextField text="player3"
                   fx:id="tf3"/>
        <TextField text="player4"
                   fx:id="tf4"/>
        <HBox alignment="CENTER">
            <Button text="Back" onAction="#toStartMenu"/>
            <Button text="Next" onAction="#toBoardCreator"/>
        </HBox>
    </VBox>
    <Label styleClass= "footer"
           text="Lua &#38; So CCPROG3-S15 2019"
           AnchorPane.bottomAnchor="10"
           AnchorPane.leftAnchor="10" />
</AnchorPane>
